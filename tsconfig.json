{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        // "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",  // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "experimentalDecorators": true, // 支持装饰器
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "app.ts",
    ]
  }